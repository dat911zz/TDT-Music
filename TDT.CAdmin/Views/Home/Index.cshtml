<style>
    .card-text{
        color: #ffff;
    }
    p span{
        font-weight: bold;
    }
</style>

<div class="card-columns">
    <div class="card bg-primary">
        <div class="card-body text-center">
            <p class="card-text">Số lượng bài hát: <span>@ViewBag.slbh</span></p>
        </div>
    </div>
    <div class="card bg-warning">
        <div class="card-body text-center">
            <p class="card-text">Số lượng nghệ sĩ: <span>@ViewBag.slns</span></p>
        </div>
    </div>
    <div class="card bg-success">
        <div class="card-body text-center">
            <p class="card-text">Số lượng tài khoản: <span>@ViewBag.sltk</span></p>
        </div>
    </div>
</div>