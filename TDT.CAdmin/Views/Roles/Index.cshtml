@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@using X.PagedList;
@model IPagedList<TDT.Core.DTO.RoleDTO>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2 class="title-admin">Danh Sách Vai Trò</h2>

<div class="row"> 
      <div class="col-3">
        <a type="button" class="btn btn-outline-dark" asp-action="Create">Tạo Mới Role</a>
      </div>
      <div class="col-6"></div>
    <div class="col-3 input-group mb-3 ">
        <input type="text" class="form-control border" placeholder="Nhập vào vai trò cần tìm"
               aria-label="Nhập vào vai trò cần tìm" aria-describedby="button-search"
               id="searchTerm" value="@ViewBag.SearchTerm">
        <div class="input-group-append">
            <button class="btn btn-outline-dark" type="button" id="button-search">
                <i class="fa fa-search" aria-hidden="true"></i>
                </button>
        </div>
    </div>
</div>


<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tên Role
                </th>
                <th>
                    Miêu tả Role
                </th>
                <th>
                    Ngày Tạo Role
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @item.CreateDate
                        </td>
                        <td class="btn-control">
                            <a onclick="DVNConfirm('Xóa', 'Vai Trò' , '/Roles/Delete' , '@item.Id')">
                                <div class="fa fa-window-close text-danger" aria-hidden="true"></div>
                            </a>
                            <a href="@Url.Action("Details", "Roles", new { id = item.Id})">
                                <div class="fa fa-bars" aria-hidden="true"></div>
                            </a>
                            <a href="@Url.Action("Edit", "Roles", new { id = item.Id})">
                                <div class="fa fa-wrench text-warning " aria-hidden="true"></div>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="pagedList-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @ViewBag.SearchTerm }), new PagedListRenderOptions { LiElementClasses = new[] { "pagedList" } })
</div>

<script>
    $(document).ready(function () {

        $('#button-search').click(function () {
            var searchTerm = $('#searchTerm').val();
            window.location.href = '@Url.Action("Index", new { page = 1 })' + '&searchTerm=' + searchTerm;
        });
        $('#searchTerm').keypress(function (e) {
            var key = e.which;
            if (key == 13) {
                var searchTerm = $('#searchTerm').val();
                window.location.href = '@Url.Action("Index", new { page = 1 })' + '&searchTerm=' + searchTerm;
            }
        });

    });
</script>
