@model IPagedList<TDT.Core.DTO.GroupDTO>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@using X.PagedList;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title-admin" >Quản Lý Group </h1>
<div class="row">
    <div class="col-3">
        <a type="button" class="btn btn-outline-dark" asp-action="Create">Tạo Mới Group</a>
    </div>
    <div class="col-6"></div>
    <div class="col-3 input-group mb-3 ">
        <input type="text" class="form-control border" placeholder="Nhập vào vai trò cần tìm"
               aria-label="Nhập vào vai trò cần tìm" aria-describedby="button-search"
               id="searchTerm" value="@ViewBag.SearchTerm">
        <div class="input-group-append">
            <button class="btn btn-outline-dark" type="button" id="button-search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tên Nhóm người dùng
                </th>
                <th>
                    Miêu tả Nhóm người dùng
                </th>
                <th>
                    Ngày Tạo Nhóm người dùng
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td class="btn-control">
                        <a onclick="DVNConfirm('Xóa', 'nhóm người dùng' , '/Group/Delete' , '@item.Id')">
                            <div class="fa fa-window-close text-danger" aria-hidden="true"></div>
                        </a>
                        <a href="@Url.Action("Details", "Group", new { id = item.Id})">
                            <div class="fa fa-bars" aria-hidden="true"></div>
                        </a>
                        <a href="@Url.Action("Edit", "Group", new { id = item.Id})">
                            <div class="fa fa-wrench text-warning " aria-hidden="true"></div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="pagedList-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LiElementClasses = new[] { "pagedList" } })
</div>
<script>
    $(document).ready(function () {

        $('#button-search').click(function () {
            var searchTerm = $('#searchTerm').val();
            window.location.href = '@Url.Action("Index", new { page = 1 })' + '&searchTerm=' + searchTerm;
        });
        $('#searchTerm').keypress(function (e) {
            var key = e.which;
            if (key == 13) {
                var searchTerm = $('#searchTerm').val();
                window.location.href = '@Url.Action("Index", new { page = 1 })' + '&searchTerm=' + searchTerm;
            }
        });

    });
</script>
