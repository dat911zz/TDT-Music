@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@using X.PagedList;
@model IPagedList<TDT.Core.DTO.PermissionDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title-admin" >Quản Lý Permission</h1>

<p>
    <a asp-action="Create">Tạo Mới Permission</a>
</p>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tên Permission
                </th>
                <th>
                    Miêu tả Permission
                </th>
                <th>
                    Ngày Tạo Permission
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td class="btn-control">
                        <a href="@Url.Action("Delete", "Permission", new { id = item.Id})">
                            <div class="fa fa-window-close text-danger" aria-hidden="true"></div>
                        </a>
                        <a href="@Url.Action("Details", "Permission", new { id = item.Id})">
                            <div class="fa fa-bars" aria-hidden="true"></div>
                        </a>
                        <a href="@Url.Action("Edit", "Permission", new { id = item.Id})">
                            <div class="fa fa-wrench text-warning " aria-hidden="true"></div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="pagedList-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LiElementClasses = new[] { "pagedList" } })
</div>