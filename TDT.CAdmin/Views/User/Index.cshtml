@model IPagedList<TDT.Core.DTO.UserDTO>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common;
@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<h2>Danh sách tài khoản</h2>
<p>
    <a asp-action="Create">Thêm tài khoản mới</a>
</p>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên đăng nhập
                </th>
                <th>
                    Email
                </th>
                <th>
                    Thời gian tạm khóa
                </th>
                <th>
                    Đang tạm khóa
                </th>
                <th>
                    Số lần truy cập thất bại
                </th>
                <th>
                    Ngày tạo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null || Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LockoutEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LockoutEnabled)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccessFailedCount)
                        </td>
                        <td>
                            @item.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")
                        </td>
                        <td class="btn-control">
                            <a onclick="DVNConfirm('Xóa', 'Tài khoản' , '/User/Delete' , '@item.UserName')">
                                <div class="fa fa-window-close text-danger" aria-hidden="true"></div>
                            </a>
                            <a href="@Url.Action("Details", "User", new { id = item.UserName})">
                                <div class="fa fa-bars" aria-hidden="true"></div>
                            </a>
                            <a href="@Url.Action("Edit", "User", new { id = item.UserName})">
                                <div class="fa fa-wrench text-warning " aria-hidden="true"></div>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>Không có dữ liệu!</tr>
            }
        </tbody>
    </table>
</div>
<!-- Hiển thị điều hướng phân trang -->
<div class="pagedList-container">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { LiElementClasses = new[] { "pagedList" } })
</div>